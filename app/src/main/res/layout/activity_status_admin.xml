<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatusAdminActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/existing"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                app:cardCornerRadius="10dp"
                android:layout_marginVertical="5dp"
                android:paddingVertical="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/applicationDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingVertical="5dp"
                        android:fontFamily="@font/oxygen_bold"
                        android:paddingHorizontal="10dp"
                        android:layout_marginTop="0dp"
                        android:textColor="#212121"
                        android:text="Your application status :"
                        android:textSize="18sp"/>

                    <Button
                        android:id="@+id/newStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_button"
                        android:backgroundTint="@color/colorTheme"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:text="Update Awaas status"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/progressList"
                android:layout_width="match_parent"
                android:paddingVertical="20dp"
                android:clipToPadding="false"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>